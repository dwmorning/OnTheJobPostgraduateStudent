.introduce {
    padding: 0 30rpx;
}

.img {
    text-align: center;
}

.img image {
    height: 60rpx;
    margin: 0 auto;
}

.top {
    overflow: visible;
    padding-top: 20rpx;
}

.top .title {
    color: #ab0c18;
    display: inline-block;
    font-size: 36rpx;
    font-weight: 700;
    margin: 20rpx 0;
    text-align: center;
}

.top .det,.top view {
    position: relative;
}

.top .det {
    border-bottom: 1rpx solid #ab0c18;
    color: #333;
    display: flex;
    font-size: 24rpx;
    justify-content: space-between;
    padding-bottom: 10rpx;
}

.det:after {
    background: #ab0c18;
    bottom: 2rpx;
    content: "";
    height: 2px;
    left: 0;
    position: absolute;
    width: 100%;
}

.top .det text {
    color: #be4039;
}

.top .show {
    display: flex;
}

.top .hide {
    background: #fff;
    border-radius: 4px;
    box-shadow: 0 0 8px rgba(26,26,26,.14);
    display: none;
    overflow: visible;
    padding: 10rpx 20rpx;
    position: absolute;
    right: 0;
    top: 36rpx;
    z-index: 2;
}

.top .hide.nohide {
    display: block;
}

.top .hide[hidden] {
    display: none!important;
}

.top .hide text {
    color: #333;
    display: block;
    line-height: 1.6;
}

.top .tap .iconfont {
    color: #e4e4e4;
    margin-left: 2px;
    margin-top: -9px;
    vertical-align: -1px;
}

.intro {
    border-bottom: 1px solid #f2f2f2;
    color: #666;
    font-size: 24rpx;
    padding: 10rpx 0 20rpx;
}

.content {
    font-size: 32rpx;
    line-height: 2;
    margin-top: 40rpx;
    padding-bottom: 120rpx;
}

.bm {
    background: #b4061f;
    border-radius: 3px;
    color: #fff;
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin: 20rpx 0;
    text-align: center;
}

.bm:after {
    border: none;
}

.bottomFixed {
    background: #f8f8f8;
    bottom: 0;
    box-sizing: border-box;
    display: flex;
    height: 120rpx;
    left: 0;
    padding-left: 30rpx;
    padding-right: 30rpx;
    position: fixed;
    width: 100%;
}

.bottomFixed .left,.bottomFixed .right {
    align-items: center;
    display: flex;
    justify-content: center;
    text-align: center;
}

.bottomFixed .left text {
    color: #666;
    display: block;
    font-size: 24rpx;
}

.bottomFixed .right text {
    color: #fff;
    font-size: 28rpx;
    margin-right: 5px;
}

.share {
    background: none;
    font-size: 24rpx;
    line-height: 1.4;
    padding: 0;
    width: 100rpx;
}

.share:after {
    border: none;
}

.share image {
    height: 35rpx;
    width: 43rpx;
}

.phone {
    width: 130rpx;
}

.phone image {
    height: 35rpx;
    width: 34rpx;
}

.apply,.online {
    align-items: center;
    background: #f03f3f;
    border-radius: 80rpx;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    height: 80rpx;
    justify-content: center;
    line-height: 1;
    overflow: hidden;
    width: 210rpx;
}

.apply text,.online text {
    height: 30rpx;
    line-height: 28rpx;
}

.online {
    background-color: #ff8e01;
    margin: 0 20rpx;
    padding: 0;
}

.apply:after,.online:after {
    border: none;
}

.online image {
    height: 30rpx;
    margin-right: 6rpx;
    width: 35rpx;
}

.apply image {
    height: 27rpx;
    margin-right: 6rpx;
    vertical-align: -2px;
    width: 29rpx;
}

.btmopa {
    display: flex;
    justify-content: center;
    margin: 20px 0;
}

.btmopa .likes {
    margin: 0 15px;
}

.btmopa .iconfont {
    margin-right: 3px;
}