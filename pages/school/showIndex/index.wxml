                        </view>
                    </view>
                </view>
            </navigator>
        </view>
    </view>
    <view hidden="{{tabb[3]}}">
        <view class="zixun">
            <navigator url="../../showContent/index?catid={{item.catid}}&id={{item.id}}" wx:for="{{zixunList}}" wx:key="zixun">
                <view class="item">
                    <image class="img" src="https://www.125yan.com/Uploads/{{item.thumb}}" wx:if="{{item.thumb!==''}}"></image>
