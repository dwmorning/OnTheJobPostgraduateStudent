.article {
    padding: 30rpx;
}

.article .title {
    color: #333;
    font-size: 36rpx;
    font-weight: 700;
}

.article .info {
    align-items: center;
    color: #ccc;
    display: flex;
    font-size: 24rpx;
    margin: 30rpx 0 0;
    padding-bottom: 10rpx;
}

.article .info1 {
    border-bottom: 1rpx solid #e4e4e4;
    margin: 30rpx 0 10rpx;
}

.article .info view {
    line-height: 1.4;
}

.article .time {
    margin-left: 20rpx;
}

.article .content {
    font-size: 32rpx;
    line-height: 2;
    padding-bottom: 80rpx;
    padding-top: 10rpx;
}

.wxParse-a {
    color: #000;
}

.bottomFixed {
    background: #f8f8f8;
    bottom: 0;
    box-sizing: border-box;
    display: flex;
    height: 120rpx;
    left: 0;
    padding-left: 30rpx;
    padding-right: 30rpx;
    position: fixed;
    width: 100%;
}

.bottomFixed .left,.bottomFixed .right {
    align-items: center;
    display: flex;
    justify-content: center;
    text-align: center;
}

.bottomFixed .left text {
    color: #666;
    display: block;
    font-size: 24rpx;
}

.bottomFixed .right text {
    color: #fff;
    font-size: 28rpx;
    margin-right: 5px;
}

.share {
    background: none;
    font-size: 24rpx;
    line-height: 1.4;
    padding: 0;
    width: 100rpx;
}

.share:after {
    border: none;
}

.share image {
    height: 35rpx;
    width: 43rpx;
}

.phone {
    width: 130rpx;
}

.phone image {
    height: 35rpx;
    width: 34rpx;
}

.apply,.online {
    align-items: center;
    background: #f03f3f;
    border-radius: 80rpx;
    color: #fff;
    display: flex;
    font-size: 28rpx;
    height: 80rpx;
    justify-content: center;
    line-height: 1;
    overflow: hidden;
    width: 210rpx;
}

.apply text,.online text {
    height: 30rpx;
    line-height: 28rpx;
}

.online {
    background-color: #ff8e01;
    margin: 0 20rpx;
    padding: 0;
}

.apply:after,.online:after {
    border: none;
}

.online image {
    height: 30rpx;
    margin-right: 6rpx;
    width: 35rpx;
}

.apply image {
    height: 27rpx;
    margin-right: 6rpx;
    vertical-align: -2px;
    width: 29rpx;
}

.article-intros {
    background-color: #f6f7f8;
    border-radius: 8px;
    color: #333;
    font-size: 26rpx;
    line-height: 1.6;
    margin-bottom: 20rpx;
    padding: calc(12px + 20px) 32rpx 32rpx;
    position: relative;
}

.article-intros .tag {
    background-color: #376ed3;
    border-radius: 8px 0 8px 0;
    color: #fff;
    font-size: 24rpx;
    left: 0;
    line-height: 20px;
    position: absolute;
    text-align: center;
    top: 0;
    width: 52px;
}

.btmopa {
    display: flex;
    justify-content: center;
    margin: 20px 0;
}

.btmopa .likes {
    margin: 0 15px;
}

.btmopa .iconfont {
    margin-right: 3px;
}