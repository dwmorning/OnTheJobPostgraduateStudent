.tabTit {
    align-items: center;
    background: #fff;
    box-shadow: 0 0 20px #ddd;
    color: #333;
    display: flex;
    font-size: 28rpx;
    position: fixed;
    text-align: center;
    top: 0;
    width: 100%;
    z-index: 2;
}

.tabTit,.tabTit .flex1 {
    height: 100rpx;
    line-height: 100rpx;
}

.tabTit .flex1 {
    flex: 30% 0 1;
    overflow: hidden;
    padding: 0 15px 0 5px;
    position: relative;
    text-align: right;
}

.tabTit .flex1:last-child {
    flex: 10% 0 1;
}

.tabTit .flex1:last-child .tabIcon {
    border: none;
    position: static;
    vertical-align: -2px;
}

.tabTit .flex1:last-child .tabIcon::after {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    content: "\e603";
    font-family: iconfont!important;
    font-size: 16px;
    font-style: normal;
}

.tabIcon {
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 10rpx solid #c9c9c9;
    display: inline-block;
    margin-left: 5px;
    margin-top: -5rpx;
    position: absolute;
    right: 0;
    top: 50%;
    vertical-align: 2px;
}

.tabTit .active {
    color: #4c6ff1;
}

.tabTit .active .tabIcon {
    border-top-color: #4c6ff1;
    transform: rotate(180deg);
}

.tabTit .flex1.active:last-child .tabIcon {
    transform: rotate(0);
}

.tabContent {
    position: relative;
}

.tabLayer {
    background: #fff;
    border-top: 1px solid #eee;
    box-sizing: border-box;
    overflow: hidden;
    width: 750rpx;
}

.mask,.tabLayer {
    position: fixed;
    top: 100rpx;
    z-index: 2;
}

.mask {
    background: rgba(0,0,0,.5);
    height: 100%;
    width: 100%;
}

.tabLayer1 {
    padding: 0 30rpx;
}

.tabLayer1 view {
    border-bottom: 1px solid #ccc;
    color: #666;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
    position: relative;
}

.tabLayer view.active {
    color: #4c6ff1;
}

.tabLayer1 view.active:after,.tabLayer2 .right view.active:after,.tabLayer4 view.active:after {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    content: "\e618";
    font-family: iconfont!important;
    font-size: 20px;
    font-style: normal;
    position: absolute;
    right: 30rpx;
}

.tabLayer2 {
    position: relative;
}

.tabLayer2.show .left {
    width: 260rpx;
}

.tabLayer2.show .right {
    transform: translateX(0);
}

.tabLayer2 .left {
    background-color: #efefef;
    text-align: center;
}

.tabLayer2 .left view {
    height: 80rpx;
    line-height: 80rpx;
}

.tabLayer2 .right {
    box-sizing: border-box;
    left: 260rpx;
    padding: 0 30rpx;
    position: absolute;
    top: 0;
    transform: translateX(100%);
    transition: transform .2s;
    transition: transform .2s,-webkit-transform .2s;
    width: 490rpx;
}

.tabLayer2 .right view {
    border-bottom: 1px solid #ccc;
    height: 80rpx;
    line-height: 80rpx;
}

.tabLayer3 {
    padding-bottom: 20rpx;
}

.tabLayer3 text {
    background-color: #f3f3f3;
    border: 1px solid #f3f3f3;
    border-radius: 4px;
    box-sizing: border-box;
    color: #666;
    float: left;
    height: 66rpx;
    line-height: 64rpx;
    margin: 20rpx 0 0 20rpx;
    text-align: center;
    width: 224rpx;
}

.tabLayer3 .active {
    background-color: #dee5ff;
    border-color: #4c6ff1;
    color: #4c6ff1;
}

.tabLayer4 view {
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    position: relative;
}

.jzConts {
    margin-top: 100rpx;
}

.jzConts .list {
    border-bottom: 1px solid #ebebeb;
    display: flex;
    justify-content: space-between;
    padding: 25rpx 0;
}

.jzConts .left {
    width: 520rpx;
}

.jzConts .right {
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.jzConts .tit {
    font-size: 36rpx;
    font-weight: 700;
}

.jzConts .sub {
    margin-top: 10rpx;
}

.jzConts .sub text {
    border: 1px solid #ff8e01;
    border-radius: 32rpx;
    color: #999;
    display: inline-block;
    font-size: 24rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-right: 20rpx;
    overflow: hidden;
    padding: 1px 8px;
}

.jzConts .pri {
    color: #be4039;
    font-size: 28rpx;
    font-weight: bolder;
    margin-bottom: 10rpx;
}

.jzConts .btn {
    background-color: #4c6ff1;
    border-radius: 50rpx;
    color: #fff;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 8px;
}

.jzConts .btn .iconfont {
    font-size: 14px;
    margin-left: 2px;
}