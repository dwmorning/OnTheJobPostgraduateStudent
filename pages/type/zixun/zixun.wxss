page {
    background-color: #f3f3f3;
}

.title {
    background-color: #fff;
    box-shadow: 0 0 10px #ddd;
    font-size: 32rpx;
    height: 90rpx;
    left: 0;
    line-height: 90rpx;
    position: fixed;
    top: 0;
    white-space: nowrap;
    width: 100%;
    z-index: 2;
}

.title view {
    display: inline-block;
    padding: 0 35rpx;
    position: relative;
    text-align: center;
}

.title view.active {
    color: #4c6ff1;
    font-weight: 700;
}

.title view.active:after {
    background: #4c6ff1;
    border-radius: 5rpx;
    bottom: 6px;
    content: "";
    height: 5rpx;
    left: 50%;
    margin-left: -15rpx;
    position: absolute;
    width: 30rpx;
    z-index: 2;
}

.content {
    margin-top: 120rpx;
}

.item {
    background-color: #fff;
    border-radius: 4px;
    display: flex;
    margin-bottom: 30rpx;
    padding: 25rpx;
}

.img {
    display: block;
    height: 160rpx;
    margin-right: 20rpx;
    width: 250rpx;
}

.info {
    flex: 1;
}

.tit {
    color: #333;
    font-size: 32rpx;
    font-weight: 700;
}

.det {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #666;
    display: -webkit-box;
    font-size: 28rpx;
    margin: 20rpx 0 10rpx;
    overflow: hidden;
    text-overflow: -o-ellipsis-lastline;
    text-overflow: ellipsis;
}

.sub {
    color: #ccc;
    display: flex;
    font-size: 24rpx;
    justify-content: space-between;
}

.sub .iconfont {
    margin-right: 3px;
    vertical-align: -2px;
}

.title view {
    flex: 1;
}