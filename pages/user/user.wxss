page {
    background-color: #f3f3f3;
}

.userTop {
    height: 180rpx;
    margin-top: 30rpx;
    position: relative;
}

.userBg {
    background-image: url("https://www.125yan.com/Public/m_index/images/perbg.png");
    background-size: 100%;
    box-sizing: border-box;
    color: #fff;
    height: 180rpx;
    padding: 20rpx;
}

.infomation {
    align-items: center;
    display: flex;
    justify-content: start;
    position: relative;
}

.infomation:after {
    border-left: 1px solid #fff;
    border-top: 1px solid #fff;
    content: "";
    height: 10px;
    margin-left: 1px;
    margin-right: 1px;
    position: absolute;
    right: 10rpx;
    transform: rotate(135deg);
    vertical-align: 1px;
    width: 10px;
}

.infomation .phone {
    font-size: 30rpx;
}

.infomation .name {
    margin-bottom: 10rpx;
}

.header {
    border: 10rpx solid hsla(0,0%,100%,.1);
    border-radius: 50%;
    height: 124rpx;
    width: 124rpx;
}

.loginBtn {
    background: none;
    color: #fff;
    flex: 1;
    text-align: left;
}

.loginBtn:after {
    border: none;
}

.usrinfo {
    margin-left: 30rpx;
}

.item {
    margin-bottom: 20px;
}

.list {
    align-items: center;
    background-color: #fff;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    float: left;
    height: 290rpx;
    justify-content: center;
    line-height: 1;
    margin-left: 30rpx;
    margin-top: 30rpx;
    text-align: center;
    width: 330rpx;
}

.list:after {
    border: none;
}

.list .iconfont {
    font-size: 70rpx;
}

.list text {
    color: #353535;
    display: block;
    font-size: 36rpx;
    margin-top: 20rpx;
}

.icon-phone {
    color: #6fc6dc;
}

.icon-zixun {
    color: #52ce64;
}

.icon-fx {
    color: #ff8e01;
}

.icon-bm {
    color: #2047d6;
}

.icon-sc {
    color: #f33c32;
}